<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/workoutListFragment">

    <fragment
        android:id="@+id/workoutListFragment"
        android:name="ru.example.kolsatest.presentation.workoutlist.WorkoutListFragment"

        android:label="Workout List Fragment"
        tools:layout="@layout/fragment_workout_list">

        <action
            android:id="@+id/action_workoutListFragment_to_workoutDetailsFragment"
            app:destination="@id/workoutDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/workoutDetailsFragment"
        android:name="ru.example.kolsatest.presentation.workoutdetail.WorkoutDetailsFragment"
        android:label="Workout Details Fragment"
        tools:layout="@layout/fragment_workout_details">

        <argument
            android:name="workout"
            app:argType="ru.example.kolsatest.domain.model.Workout" />
    </fragment>

</navigation>